@model AgendaOdontologica.Models.Dentista

@{
    ViewData["Title"] = "Create";
}
    <html  lang="pt-br">
    <head>
        <meta charset="utf-8">
    </head>

    <body>

       
      @{ 
         
          if (ViewBag.dataNasc >= DateTime.Now)
          {
              <script type="text/javascript">
                  alert('data de nascimento invalida')
              </script>
          }

      }

        <h2>Cadastro</h2>

        <h4>Dentista</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label" id="nomeDentista"></label>
                        <input asp-for="Nome" class="form-control" id="nomeDentista" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataNaci" class="control-label " id="dataNascimento"></label>
                        <input asp-for="DataNaci" class="form-control" id="dataNascimento" />
                        <span asp-validation-for="DataNaci" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataAdmissao" class="control-label" id="dataNascimento"></label>
                        <input asp-for="DataAdmissao" class="form-control" id="dataNascimento" />
                        <span asp-validation-for="DataAdmissao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label" id="loginDentista"></label>
                        <input asp-for="Login" class="form-control" id="loginDentista" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Senha" class="control-label" id="SenhaDentista"></label>
                        <input asp-for="Senha" class="form-control" id="senhaDentista" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CPF" class="control-label" id="cpfDentista"></label>
                        <input asp-for="CPF" class="form-control" id="cpfDentista" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Endereco" class="control-label" id="enderecoDentista"></label>
                        <input asp-for="Endereco" class="form-control" id="enderecoDentista" />
                        <span asp-validation-for="Endereco" class="text-danger "></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CEP" class="control-label" id="cepDentista"></label>
                        <input asp-for="CEP" class="form-control" id="cepDentista" />
                        <span asp-validation-for="CEP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PIS" class="control-label" id="pisDentista"></label>
                        <input asp-for="PIS" class="form-control" id="pisDentista" />
                        <span asp-validation-for="PIS" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Especializacao.Especialidade" class="control-label"></label>
                        <select asp-for="Especializacao.Especialidade" name="EspecializacaoId" class="form-control">
                            @foreach (var item in ViewBag.Especialidades)
                            {
                                <option value="@item.Id">@item.Especialidade</option>

                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-default"OnClientClick ="return validacaoDataNascimento()"/>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-primary" asp-action="Index">Voltar</a>
        </div>
    </body>
    </html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
