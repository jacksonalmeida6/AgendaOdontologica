@model AgendaOdontologica.Models.Agendamento

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HoraAtendimento" class="control-label"></label>
                <input asp-for="HoraAtendimento" class="form-control" />
                <span asp-validation-for="HoraAtendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoAtemdimento" class="control-label"></label>
                <input asp-for="TempoAtemdimento" class="form-control" />
                <span asp-validation-for="TempoAtemdimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DentistaId" class="control-label"></label>
                <select asp-for="DentistaId" class="form-control" name="DentistaId">

                    @foreach (var item in ViewBag.DentistaNome)
                    {
                        <option value="@item.Id">@item.Nome</option>

                    }
                </select>
            </div>
            <div class="form-group">

                <label asp-for="PacienteId" class="control-label"></label>
                <select asp-for="PacienteId" class="form-control" name="PacienteId">
                    @foreach (var item in ViewBag.PacienteNome)
                    {
                        <option value="@item.Id">@item.NomePaciente</option>

                    }
                </select>

            </div>
            <div class="form-group">
                <label asp-for="SecretariaId" class="control-label"></label>
                <select asp-for="SecretariaId" class="form-control" name="SecretariaId">
                    @foreach (var item in ViewBag.SecretariaNome)
                    {
                        <option value="@item.Id">@item.Nome</option>

                    }
                </select>
            
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
